<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ChaseMusicX.DayNight" parent="Theme.ChaseMusicX"/>

    <!-- Base application theme. -->
    <style name="Theme.ChaseMusicX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Platform attributes-->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:statusBarColor">@color/immersive_ui</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>

        <item name="bottomNavigationStyle">@style/Widget.ChaseMusicX.BottomNavigationView</item>
    </style>

</resources>